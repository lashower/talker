<div class="col-sm-6 offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <div data-ng-show="message != null" class="alert alert-danger">{{message}}</div>

    <!-- LOGIN FORM -->
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" data-ng-model="username" name="username">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input data-ng-model="password" type="password" class="form-control" name="password">
    </div>

    <button data-ng-click="login()" class="btn btn-warning btn-lg">Login</button>

    <hr>

    <p>Need an account? <a data-ui-sref="signup">Signup</a></p>
    <p>Or go <a data-ui-sref="main">home</a>.</p>

</div>
